<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zedboardking.burgerqueenapp" >

    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Controller"
        android:allowBackup="true"
        android:icon="@mipmap/burgerqueen"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ViewWelcome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ViewCheckout" ></activity>
        <activity android:name=".ViewCart" ></activity>
        <activity android:name=".NewOrders"></activity>
        <activity android:name=".ViewCostumerMenu"></activity>

    </application>

</manifest>

